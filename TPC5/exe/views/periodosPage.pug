extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 
                span List of Composers from #{periodo} 
        .w3-container
            table.w3-table-all
                each compositor in compositores
                    tr
                        td 
                            a(href='/compositores/' + compositor.id) #{compositor.nome}
    footer.w3-container.w3-blue
        a.w3-btn.w3-round.w3-gray(style='margin-top: 10px;' href='/periodos') Return 
        br
        h5 Generated by Rodas in #{date}