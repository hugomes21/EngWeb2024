extends layout

block content
  nav.w3-bar.w3-aqua
    div.w3-bar-item.w3-button.w3-hover-none.w3-text-grey.w3-hover-text-white.w3-right
      a(href='/logout') Logout
      
  .w3-card-4 
    header.w3-container.w3-teal
      h1 
        span Lista de Ruas por Lugar
          |  #{Lugar}
      .w3-container 
        table.w3-table-all 
          tr 
            th Número da Rua
            th Nome da Rua  
            th Número de Casas 
          each rua in Ruas
            tr 
              td= rua.numero
              td
                a(href='http://localhost:1894/'+rua._id)= rua.nome
              td= rua.casas.length
    footer.w3-container.w3-teal 
      h5 Generated by Group 38 in #{date}