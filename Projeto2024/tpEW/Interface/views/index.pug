doctype html
html(lang="pt")
  head
    title Mapa das Ruas de Braga
    link(rel="stylesheet" href="/stylesheets/style.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script.
      $(document).ready(function(){
        var images = !{JSON.stringify(images)};
        var index = 0;

        $('#slideshow').css('background-image', 'url(' + images[index] + ')');

        setInterval(function(){
          index = (index + 1) % images.length;
          $('#slideshow').fadeOut(500, function(){
            $(this).css('background-image', 'url(' + images[index] + ')');
            $(this).fadeIn(500);
          });
        }, 3000);
      });
    style.
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      #slideshow {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -1;
        background-size: cover;
        background-position: center;
      }
      .container {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: white;
        text-align: center;
      }
      h1 {
        font-size: 3em;
        animation: fadeIn 3s ease-in-out;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Adiciona contorno ao texto */
      }
      .buttons {
        margin-top: 20px;
      }
      .buttons a {
        margin: 0 10px;
        padding: 10px 20px;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s;
      }
      .buttons a:hover {
        background: rgba(0, 0, 0, 0.8);
      }
  body
    #slideshow
    .container
      h1 Mapa das Ruas de Braga
      //- .buttons
      //-   a(href="/ruas") Lista de Ruas
      .buttons
        a(href="/login") Login
        a(href="/register") Registar
