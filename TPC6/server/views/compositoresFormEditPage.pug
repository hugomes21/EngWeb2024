extends layout 

block content
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Composer Edit Page 

        form.w3-container(method="POST")
            fieldset 
                legend Metadata
                label Id 
                if 'id' in compositor
                    input.w3-input.w3-round(type="text" name="id" value=compositor.id readonly)
                else
                    input.w3-input.w3-round(type="text" name="id" required)
                label Name
                if 'nome' in compositor
                    input.w3-input.w3-round(type="text" name="nome" value=compositor.nome required)
                else
                    input.w3-input.w3-round(type="text" name="nome" required)
                label Biography
                if 'bio' in compositor
                    input.w3-input.w3-round(type="text" name="bio" value=compositor.bio required)
                else
                    input.w3-input.w3-round(type="text" name="bio" required)
                label Birth Date
                if 'dataNasc' in compositor
                    input.w3-input.w3-round(type="date" name="dataNasc" value=compositor.dataNasc required)
                else
                    input.w3-input.w3-round(type="date" name="dataNasc" required)
                label Death Date
                if 'dataObito' in compositor
                    input.w3-input.w3-round(type="date" name="dataObito" value=compositor.dataObito required)
                else
                    input.w3-input.w3-round(type="date" name="dataObito" required)
                label Period
                if 'periodo' in compositor
                    input.w3-input.w3-round(type="text" name="periodo" value=compositor.periodo required)
                else
                    input.w3-input.w3-round(type="text" name="periodo" required)
            br 
            button.w3-btn.w3-purple.w3-mb-2(style="margin-bottom: 10px" type="submit") Register
        

        footer.w3-container.w3-purple 
            h5 Generated by EngWeb2023 in #{date} - [
                a(href="/compositores") Return
                span ]