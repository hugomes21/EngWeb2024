extends layout 

block content
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 
                span Composers List 
                a.w3-btn.w3-round.w3-gray(href='/compositores/registo') +

        .w3-container
            table.w3-table-all
                tr 
                    th ID
                    th Name
                    th Biography
                    th Birth Date 
                    th Death Date
                    th Period
                each compositor in compositores
                    tr
                        td= compositor.id
                        td 
                            a(href='/compositores/' + compositor.id) #{compositor.nome}
                        td= compositor.bio
                        td= compositor.dataNasc
                        td= compositor.dataObito
                        td= compositor.periodo
                        td 
                            a.w3-btn.w3-round.w3-yellow(href='/compositores/edit/' + compositor.id) Edit
                            a.w3-btn.w3-round.w3-red(href='/compositores/delete/' + compositor.id) Delete 
        footer.w3-container.w3-blue 
            a.w3-btn.w3-round.w3-gray(style= 'margin-top: 10px' href='/periodos') Back to Periods
            h5 Generated by Rodas in #{date}